<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <!-- 新闻内容/评论区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#63c075"
            android:id="@+id/mine_head" >


            <Button
                android:id="@+id/commun_arearb"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/fanhui" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="课程交流区"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_coursemanagementtj"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
               />
        </LinearLayout>
        
        
        <!--第一部分，新闻区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 新闻作者头像-->
            <sharp.CircleImageView
                android:id="@+id/teacher_commun_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher" />
            <!-- 新闻简单信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp">
                    <!-- 新闻作者-->
                    <TextView
                        android:id="@+id/teacher_commun_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="教师名称"
                        android:textSize="15sp" />
                    <!-- 新闻时间-->
                    <TextView
                        android:id="@+id/teacher_commun_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="13:00"
                        android:textSize="12sp" />
                </RelativeLayout>
                <!-- 新闻内容简要-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacher_commun_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="实训计划展示"
                        android:textSize="13sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!-- 第二部分，评论区-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">
            <!-- 评论区主内容区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_line"
                android:paddingTop="20dp">

                <ListView
                    android:id="@+id/list_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    ></ListView>
            </LinearLayout>

            <!-- 标题部分、评论区-->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="#63c075"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/commit_area_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="评论区"
                    android:textSize="13sp" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    <!--第三部分，评论区和输入区-->
    <LinearLayout
        android:id="@+id/comment_vg_lyt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/solid_line"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <!--评论框-->
        <LinearLayout
            android:id="@+id/lyt_comment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="评论一下"
                android:textColor="#A1A1A1"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>
    <!--第四部分，评论输入区-->
<commun_part.NoTouchLinearLayout
    android:id="@+id/edit_vg_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77030303"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="gone">
    <LinearLayout
        android:id="@+id/ll_comment_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <!-- 输入框 -->
        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_bg"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:maxLines="6"
            android:minHeight="120dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可撰写字"
                    android:textColor="#848484" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="@drawable/font_140_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字"
                    android:textColor="#848484" />
            </LinearLayout>


            <!-- <CheckBox
                android:id="@+id/checkbox_anonymous"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="匿名发布"
                android:textColor="#848484"
                android:textSize="15sp" /> -->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/but_comment_send"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_comment"
                android:text="发表"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>
</commun_part.NoTouchLinearLayout>

</FrameLayout>
