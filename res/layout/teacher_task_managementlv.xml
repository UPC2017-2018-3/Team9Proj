<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
                   android:id="@+id/system_buju1"
                   android:layout_width="fill_parent"
                   android:layout_height="83dp"
                   android:layout_below="@+id/mine_head"
                   android:background="#ffffff"
            >
       
            
            <TextView 
                   android:id="@+id/teacher_task_managementlv_t1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="任务类型"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="20dp"
                   android:textSize="21sp"
                   />
            <TextView 
                   android:id="@+id/teacher_task_managementlv_t2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="挺好的合同地方干部的发表忍痛割肉地方干部的如果"
                   android:layout_below="@+id/teacher_task_managementlv_t1"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="50dp"
                   android:textSize="15sp"
                   />
             <TextView 
                   android:id="@+id/teacher_task_managementlv_t3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2017.1.1-2017.2.2"
                   android:layout_below="@+id/teacher_task_managementlv_t2"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="50dp"
                   android:textSize="14sp"
                   />
            <TextView 
                   android:id="@+id/teacher_task_managementlv_b1"
                   android:layout_width="25dp"
                   android:layout_height="30dp"
                   android:layout_alignParentRight="true"
                   android:background="@drawable/jinru"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="20dp"
                   />
          

       
    </RelativeLayout>
    <RelativeLayout 
         android:id="@+id/course_xian1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/system_buju1"
        >
        <View  android:layout_height="1px" 
           android:layout_width="wrap_content"
           android:background="#e6e6e6"
           android:layout_marginLeft="50dp"
        />
     </RelativeLayout>
    

</LinearLayout>
