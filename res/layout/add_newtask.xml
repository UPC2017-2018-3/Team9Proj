<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MineActivity" 
    android:background="#f7f7f7"
    >
<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#63c075"
            android:id="@+id/user_edit_head" >


            <Button
                android:id="@+id/add_newtask_setupfh"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/fanhui" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="设置"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_edit_xxbt"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                 />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:background="#ffffff"
            android:id="@+id/buju1"
            android:layout_below="@+id/user_edit_head" >
             <ImageView 
                   android:id="@+id/img1"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/renwuleixing"/>
             <TextView 
                   android:id="@+id/t1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/img1"
                   android:layout_marginTop="12dp"
                   android:text="选择任务类型"
                   android:textSize="21sp"
                   android:layout_marginLeft="5dp"
                   android:textColor="#000000"/>
          <RelativeLayout 
             android:id="@+id/mine_xian1"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@+id/img1"
        >
        <View 
            android:layout_height="1px" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:layout_width="wrap_content"
           android:background="#000000" />
         </RelativeLayout>
          <RadioGroup
              android:id="@+id/radioGroup1"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/mine_xian1"
              android:layout_marginTop="8dp"
              android:layout_centerInParent="true" >
        
          <RadioButton
            android:id="@+id/newtask_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作品" 
            android:textColor="#000000"
            />
          <RadioButton
            android:id="@+id/newtask_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记" />
          <RadioButton
            android:id="@+id/newtask_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="论文" />
          <RadioButton
            android:id="@+id/newtask_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他" />

         </RadioGroup>
          
       </RelativeLayout>  
       
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="130dip"
            android:background="#ffffff"
            android:id="@+id/buju2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buju1" >
             <ImageView 
                   android:id="@+id/img2"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/xuanzebanji"/>
             <TextView 
                   android:id="@+id/t2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/img2"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="5dp"
                   android:text="添加班级及课程"
                   android:textSize="21sp"
                   android:textColor="#000000"/>
          <RelativeLayout 
             android:id="@+id/mine_xian2"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@+id/img2"
        >
        <View 
            android:layout_height="1px" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:layout_width="wrap_content"
           android:background="#000000" />
         </RelativeLayout>
         <RelativeLayout 
                   android:id="@+id/buju2_tx1"
                   android:layout_width="fill_parent"
                   android:layout_height="45dp"
                   android:layout_below="@+id/mine_xian2"
                   android:background="#ffffff"
            >
       
            
            <TextView 
                   android:id="@+id/student_t1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="添加课程"
                   android:layout_marginLeft="20dp"
                   android:textSize="17sp"
                   android:layout_centerVertical="true"/>
            
           <RelativeLayout 
                   android:id="@+id/student_b1"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   android:layout_marginRight="20dp"
                   android:background="#ffffff"
                   android:layout_toRightOf="@+id/student_t1"
                   android:layout_marginLeft="30dp"
                   android:layout_alignParentBottom="true"
            >
       
            <EditText 
                android:id="@+id/add_newtask_tjkc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="输入您相关课程"
                android:textSize="13sp"
                
                />
            
       
    </RelativeLayout>
   

       
    </RelativeLayout>
    <RelativeLayout 
                   android:id="@+id/buju2_tx2"
                   android:layout_width="fill_parent"
                   android:layout_height="45dp"
                   android:layout_below="@+id/buju2_tx1"
                   android:background="#ffffff"
            >
       
            
            <TextView 
                   android:id="@+id/student_t2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="添加班级"
                   android:layout_marginLeft="20dp"
                   android:textSize="17sp"
                   android:layout_centerVertical="true"/>
            <RelativeLayout 
                   android:id="@+id/student_b2"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   android:layout_marginRight="20dp"
                   android:background="#ffffff"
                   android:layout_alignParentBottom="true"
                   android:layout_toRightOf="@+id/student_t2"
                   android:layout_marginLeft="30dp"
            >
       
            <EditText 
                android:id="@+id/add_newtask_tjbj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="输入您相关班级"
                android:textSize="13sp"
                />
           
       
    </RelativeLayout>
           

       
    </RelativeLayout>
          
          
       </RelativeLayout>  
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:background="#ffffff"
            android:id="@+id/buju3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buju2" >
             <ImageView 
                   android:id="@+id/img3"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/renwugaiyao"/>
             <TextView 
                   android:id="@+id/t3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/img3"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="5dp"
                   android:text="任务概要"
                   android:textSize="21sp"
                   android:textColor="#000000"/>
          <RelativeLayout 
             android:id="@+id/mine_xian3"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@+id/img3"
        >
        <View 
            android:layout_height="1px" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:layout_width="wrap_content"
           android:background="#000000" />
         </RelativeLayout>
         <RelativeLayout 
                   android:id="@+id/buju3_tx1"
                   android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:layout_below="@+id/mine_xian3"
                   android:background="#ffffff"
            >
          <EditText 
                android:id="@+id/add_newtask_bt"
            android:layout_width="match_parent"
            android:layout_height="50dip"
             android:hint="请输入任务标题"
                android:textSize="15sp"
                />
       
            <EditText 
                android:id="@+id/add_newtask_gy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:hint="请输入任务描述"
                android:textSize="15sp"
                android:layout_below="@+id/add_newtask_bt"
                />
           
       
    </RelativeLayout>

       </RelativeLayout>
       
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:background="#ffffff"
            android:id="@+id/buju4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buju3" >
             <ImageView 
                   android:id="@+id/img4"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/shedingshijian"/>
             <TextView 
                   android:id="@+id/t4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/img4"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="5dp"
                   android:text="设定时间"
                   android:textSize="21sp"
                   android:textColor="#000000"/>
          <RelativeLayout 
             android:id="@+id/mine_xian4"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@+id/img4"
        >
        <View 
            android:layout_height="1px" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:layout_width="wrap_content"
           android:background="#000000" />
         </RelativeLayout>
         <RelativeLayout 
                   android:id="@+id/buju4_tx1"
                   android:layout_width="fill_parent"
                   android:layout_height="45dp"
                   android:layout_below="@+id/mine_xian4"
                   android:background="#ffffff"
            >
       
            
            <TextView 
                   android:id="@+id/student_t5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="截至时间"
                   android:layout_marginLeft="20dp"
                   android:textSize="17sp"
                   android:layout_centerVertical="true"/>
            
           <RelativeLayout 
                   android:id="@+id/student_b5"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   android:layout_marginRight="20dp"
                   android:background="#ffffff"
                   android:layout_alignParentBottom="true"
                   android:layout_toRightOf="@+id/student_t5"
                   android:layout_marginLeft="30dp"
            >
       
            <EditText 
                android:id="@+id/add_newtask_tjrq1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="输入任务截至时间"
                android:textSize="13sp"
                />
            
       
    </RelativeLayout>
   

       
    </RelativeLayout>
    
          
          
       </RelativeLayout>
       
       <Button
            android:id="@+id/teacher_add_newtaskb1"
            android:layout_alignParentBottom="true"   
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
             android:layout_marginRight="7dp"
             android:layout_marginLeft="7dp"
            android:background="@drawable/shape2"
            android:text="提交" 
             android:layout_centerHorizontal="true"    
            android:textColor="#ffffff"
            android:textSize="16sp"
       />
       
          
      </RelativeLayout>