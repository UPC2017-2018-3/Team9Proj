<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
                android:id="@+id/li1"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:background="#ffffff">

        <Button
            android:id="@+id/shixun"
            android:layout_width="50dip"
            android:layout_height="50dp"
            android:background="@drawable/shixun"
            android:layout_marginLeft="20dip"/>
         <View  
            android:layout_width="1dp" 
            android:layout_height="match_parent"
            android:background="#63c075"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dip"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                
          <Button
              android:id="@+id/zonghelianxi"
            android:layout_width="50dip"
            android:layout_height="50dp"
            android:background="@drawable/zonghe"
            />
               
            </LinearLayout>
          <View  
            android:layout_width="1dip" 
            android:layout_height="match_parent"
            android:background="#63c075"
            android:layout_marginRight="20dip"
            android:orientation="horizontal"/>
         
         

         <Button
             android:id="@+id/cuoti"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginRight="12dip"
             android:background="@drawable/cuoti" />
       
    </LinearLayout>
    
    <LinearLayout android:id="@+id/li2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="10dp">
     
  <ListView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/kecheng_zhi_listview">
  </ListView>
  
</LinearLayout>

</LinearLayout>
