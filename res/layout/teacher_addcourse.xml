<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MineActivity" 
    android:background="#e6e6e6"
    >

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#63c075"
            android:id="@+id/mine_head" >


            <Button
                android:id="@+id/teacher_addcourserb"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/fanhui" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="课程管理"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_addcourset2"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                 />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/part1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_below="@+id/mine_head">
         <RelativeLayout
            android:id="@+id/buju1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dip">
        <ImageView 
             android:id="@+id/image1"
             android:layout_width="30sp"
             android:layout_height="30sp"
             android:layout_centerVertical="true"
             android:src="@drawable/renwugaiyao"
             android:layout_marginLeft="10dip"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="课程名称"
             android:textSize="20dip"
             android:textColor="#000000"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/image1"/>
        </RelativeLayout>
        <RelativeLayout 
         android:id="@+id/teacher_xian1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buju1"
        android:layout_marginTop="5dip"
        >
        <View  android:layout_height="1px" 
           android:layout_width="wrap_content"
           android:background="#e6e6e6"
        />
     </RelativeLayout>

     <EditText
            android:id="@+id/teacher_addcourseet1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dip"
            android:gravity="top"
            android:ems="10"
            android:textSize="15sp"
            android:hint="输入您相关班级"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dip"
            android:background="@null"
            android:layout_below="@+id/teacher_xian1" >
        </EditText>
     
     
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/part2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/part1">
         <RelativeLayout
            android:id="@+id/buju2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dip">
        <ImageView 
             android:id="@+id/image2"
             android:layout_width="30sp"
             android:layout_height="30sp"
             android:layout_centerVertical="true"
             android:src="@drawable/renwugaiyao"
             android:layout_marginLeft="10dip"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="上传课程封面"
             android:textSize="20dip"
             android:textColor="#000000"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/image2"/>
        </RelativeLayout>
        <RelativeLayout 
         android:id="@+id/teacher_xian2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buju2"
        android:layout_marginTop="5dip"
        >
        <View  android:layout_height="1px" 
           android:layout_width="wrap_content"
           android:background="#e6e6e6"
        />
     </RelativeLayout>
     
     <ImageView
         android:id="@+id/teacher_addcoursepic"
         android:layout_width="80sp"
         android:layout_height="80sp"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:src="@drawable/weijiazai"
         android:layout_marginTop="5dip"
         android:layout_below="@+id/teacher_xian2"/>

     <!-- <EditText
            android:id="@+id/addcourse_et2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dip"
            android:gravity="top"
            android:ems="10"
            android:textSize="15sp"
            android:hint="输入您相关班级"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dip"
            android:layout_below="@+id/teacher_xian2" >
        </EditText> -->
     
     
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/part3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/part2">
         <RelativeLayout
            android:id="@+id/buju3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dip">
        <ImageView 
             android:id="@+id/image3"
             android:layout_width="30sp"
             android:layout_height="30sp"
             android:layout_centerVertical="true"
             android:src="@drawable/renwugaiyao"
             android:layout_marginLeft="10dip"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="课程介绍"
             android:textSize="20dip"
             android:textColor="#000000"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/image3"/>
        </RelativeLayout>
        <RelativeLayout 
         android:id="@+id/teacher_xian3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buju3"
        android:layout_marginTop="5dip"
        >
        <View  android:layout_height="1px" 
           android:layout_width="wrap_content"
           android:background="#e6e6e6"
        />
     </RelativeLayout>

     <EditText
            android:id="@+id/teacher_addcourseet2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dip"
            android:gravity="top"
            android:ems="10"
            android:textSize="15sp"
            android:hint="添加课程内容介绍"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dip"
            android:background="@null"
            android:layout_below="@+id/teacher_xian3" >
        </EditText>
     
     
    </RelativeLayout>
        
      
       <Button 
        android:id="@+id/teacher_setup_zx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="完成编辑"
        android:background="#63c075"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"        
        />
      
</RelativeLayout>
