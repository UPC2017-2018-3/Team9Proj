<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MineActivity" 
    android:background="#ffffff"
    >

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#63c075"
            android:id="@+id/mine_head" >


            <Button
                android:id="@+id/teacher_courserb"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/fanhui" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teacher_courseti1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="课程1"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/teacher_coursemanagementtj"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:background="@drawable/quanzi"/>
        </LinearLayout>
        <RelativeLayout
        android:id="@+id/teacher_courset1"
        android:layout_width="wrap_content"
        android:layout_height="200dp" 
        android:layout_below="@+id/mine_head"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
                    android:id="@+id/teacher_courset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:src="@drawable/xiugaimima"
                    android:gravity="center"
                    android:ems="10"
                    android:background="@drawable/shape1"/>
         </RelativeLayout>
      
     <LinearLayout
                android:id="@+id/mine_buju3"
                android:layout_width="fill_parent"
                android:layout_height="63dp"
                android:layout_marginTop="12dip"
                android:layout_below="@+id/teacher_courset1" 
                android:background="#ffffff">

        <Button
            android:id="@+id/teacher_coursetbt1"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zu1"
            android:layout_marginLeft="20dip"/>
        
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                
          <Button
              android:id="@+id/teacher_coursetbt2"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zu2"
            />
               
            </LinearLayout>


         <Button
             android:id="@+id/teacher_coursetbt3"
             android:layout_width="60dp"
             android:layout_height="fill_parent"
             android:layout_marginRight="12dip"
             android:background="@drawable/zu3" />
       
    </LinearLayout>
      <LinearLayout
                android:id="@+id/mine_buju4"
                android:layout_width="fill_parent"
                android:layout_height="63dp"
                android:layout_marginTop="19dip"
                android:layout_below="@+id/mine_buju3" 
                android:background="#ffffff">

        <Button
            android:id="@+id/teacher_coursetbt4"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zu4"
            android:layout_marginLeft="20dip"/>
        
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                
          <Button
              android:id="@+id/teacher_coursetbt5"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zu5"
            />
               
            </LinearLayout>


         <Button
             android:id="@+id/teacher_coursetbt6"
             android:layout_width="60dp"
             android:layout_height="fill_parent"
             android:layout_marginRight="12dip"
             android:background="@drawable/zu6" />
       
    </LinearLayout>
     
     
     </RelativeLayout>