<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape1" >
       
      <TextView
         android:id="@+id/class_t1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="18dp"
         android:text="课程名称：高等数学"
         android:textSize="15sp" />
     <TextView 
         android:id="@+id/class_t2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:text="张老师"
         android:layout_marginTop="18dp"
         android:layout_marginRight="15dip"
         android:textColor="#63c075"/>
     <TextView 
         android:id="@+id/class_t3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/class_t1"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="10dp"
         android:text="选课人数：80"
         android:textSize="15sp"/>
     <TextView 
         android:id="@+id/class_t4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/class_t3"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="10dp"
         android:text="平均成绩：75"
         android:textSize="15sp"/>
     <TextView 
         android:id="@+id/class_t5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/class_t4"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="10dp"
         android:text="及格人数：95"
         android:textSize="15sp"/>
     <TextView 
         android:id="@+id/class_t6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/class_t5"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="10dp"
         android:text="优秀人数：55"
         android:textSize="15sp"/>  
        
      
    </RelativeLayout>
    