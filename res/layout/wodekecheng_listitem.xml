<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >
            
         <ImageView
             android:id="@+id/img_wodekecheng"
             android:layout_width="120dp"
             android:layout_height="100dp"
             android:layout_alignParentTop="true"
             android:src="@drawable/kecheng" />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re3"
            android:layout_toRightOf="@+id/re2"
            android:layout_width="220dp"
            android:layout_height="100dp"
            >
         
        <TextView
              android:id="@+id/tv1_wodekecheng"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="14dp"
              android:layout_marginTop="25dp"
              android:text="基础操作入门" />

         <TextView
             android:id="@+id/tv2_wodekecheng"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/tv1_wodekecheng"
             android:layout_below="@+id/tv1_wodekecheng"
             android:text="王平" />
         
          <TextView
             android:id="@+id/tv3_wodekecheng"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/tv2_wodekecheng"
             android:layout_alignBaseline="@+id/tv2_wodekecheng"
             android:layout_marginLeft="5dp"
             android:text="中国石油大学（华东）" />

          <TextView
             android:id="@+id/tv4_wodekecheng"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/tv2_wodekecheng"
             android:layout_below="@+id/tv2_wodekecheng"
             android:text="目前学习进度：" />
          
          <TextView
             android:id="@+id/tv5_wodekecheng"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/tv4_wodekecheng"
             android:layout_alignBaseline="@+id/tv4_wodekecheng"
             android:layout_marginLeft="5dp"
             android:text="30%" />
         
         
        </RelativeLayout>

        

    </RelativeLayout>

</LinearLayout>