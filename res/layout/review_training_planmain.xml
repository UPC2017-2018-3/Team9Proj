<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#63c075"
            android:id="@+id/mine_head" >


            <Button
                android:id="@+id/review_training_planmainrb"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/fanhui" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="实训计划审核"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_addcourset2"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                 />
        </LinearLayout>
     <TextView
         android:id="@+id/user_edit_buju2"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:padding="8dip"
          android:text="实训计划审核"
          android:layout_below="@+id/mine_head"
          android:layout_marginLeft="15dip"
          android:layout_marginRight="15dip"
          android:layout_marginTop="15dip"
          android:textSize="18sp" />
     <RelativeLayout 
                   android:id="@+id/user_edit_buju3"
                   android:layout_width="fill_parent"
                   android:layout_height="60dp"
                   android:layout_alignParentBottom="true"
                   android:background="#63c075"
            >
            <ImageView 
                 android:id="@+id/I1"
                   android:layout_width="3dip"
                   android:layout_height="45dip"
                   android:layout_centerInParent="true"
                   android:background="@drawable/baitiao"
                />
           <Button
                    android:id="@+id/daiding"
                    android:layout_width="130dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/I1"
                    android:background="@drawable/daidingxiugai"
                    android:textColor="#ffffff"
                    android:textSize="18sp" /> 
           <Button
                    android:id="@+id/querenfabu"
                    android:layout_width="130dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/I1"
                    android:background="@drawable/querenfabu"
                    android:textColor="#ffffff"
                    android:textSize="18sp" /> 
            
      </RelativeLayout>
    
    
    

</RelativeLayout>
