<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="0.04"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cuotiitem_textView1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="单项选择题"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cuotiitem_textView2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="0.42"
            android:paddingLeft="55dp"
            android:text="1/8"
            android:textSize="20sp" />
    </LinearLayout>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.51"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cuotiitem_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:textSize="18sp"
            android:text="在Java类中，使用以下（）声明语句来定义公有的静态变量num"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioButton
            android:id="@+id/cuotiitem_radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:paddingTop="10dp"
            android:text="public int num=100" />

        <RadioButton
            android:id="@+id/cuotiitem_radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:text="final int num=100" />
        
        <RadioButton
            android:id="@+id/cuotiitem_radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:text="public static int num=100" />

       <RadioButton
            android:id="@+id/cuotiitem_radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:text="private static int num=100" /> 

           
  </LinearLayout>

</LinearLayout>