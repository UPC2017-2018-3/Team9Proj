<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    
   
       <RelativeLayout
        android:id="@+id/buju1"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_below="@+id/mine_head"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
                    android:id="@+id/carousel_diagram_img1"
                    android:layout_width="250dip"
                    android:layout_height="150dip"
                    android:src="@drawable/xiugaimima"
                    android:gravity="center"
                    android:ems="10"
                    android:background="@drawable/shape1"/>
        <Button android:id="@+id/carousel_diagram_bj1"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@drawable/zu2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/carousel_diagram_img1"
                />
         </RelativeLayout>
         <RelativeLayout 
         android:id="@+id/mine_xian1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buju1"
        >
        <View 
           android:layout_height="2px" 
           android:layout_width="wrap_content"
           android:background="#e6e6e6"
        />
     </RelativeLayout>
    

</LinearLayout>
